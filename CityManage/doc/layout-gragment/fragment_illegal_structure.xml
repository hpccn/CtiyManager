<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/illegal_structure_examination"
        android:textSize="32dip" />

    <TextView
        android:id="@+id/id_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/illegal_structure_examination_sub_title"
        android:textSize="16dip" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignBounds"
            android:columnCount="4"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true" >



            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/examination_time" />

            <EditText
                android:id="@+id/examination_date_time"
                android:ems="10"
                android:hint="@string/hint_time" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/address" />

            <EditText
                android:id="@+id/et_address"
                android:ems="10"
                android:hint="@string/illegal_structure_address" />
            

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/landlord" />

            <EditText
                android:id="@+id/et_landlord"
                android:ems="10"
                android:hint="@string/illegal_structure_landlord" />




           <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/land_property" />

            <EditText
                android:id="@+id/et_land_property"
                android:ems="10"
                android:hint="@string/land_property" />
            
           <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/land_area" />

            <EditText
                android:id="@+id/et_land_area"
                android:ems="10"
                android:hint="@string/land_area" />
            
           <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/building_structure" />

            <EditText
                android:id="@+id/et_building_structure"
                android:ems="10"
                android:hint="@string/building_structure" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/building_area" />

            <EditText
                android:id="@+id/et_building_area"
                android:ems="10"
                android:hint="@string/building_area" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/construction_time" />

            <EditText
                android:id="@+id/et_construction_time"
                android:ems="10"
                android:hint="@string/construction_time" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/discovery_time" />

            <EditText
                android:id="@+id/et_discovery_time"
                android:ems="10"
                android:hint="@string/discovery_time" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/circumstance_category" />

           <RadioGroup
                android:id="@+id/radiogroup_circumstance_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb_circumstance_category_newfound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/circumstance_category_newfound" />
 				<RadioButton
                    android:id="@+id/rb_circumstance_category_dismantlement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/circumstance_category_dismantlement" />
                 <RadioButton
                    android:id="@+id/rb_circumstance_category_outher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/circumstance_category_outher" />
 


            </RadioGroup>
            
            



            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/note" />

            <EditText
                android:id="@+id/et_note"
                android:ems="10"
                android:hint="@string/note" />
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:text="@string/commit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:layout_gravity="right"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>