<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/unlicensed_vendor_examination"
        android:textSize="32dip" />

    <TextView
        android:id="@+id/id_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/unlicensed_vendor_examination_sub_title"
        android:textSize="16dip" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignBounds"
            android:columnCount="4"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true" >



            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/examination_time" />

            <EditText
                android:id="@+id/examination_date_time"
                android:ems="10"
                android:hint="@string/hint_time" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/proprietor" />

            <EditText
                android:id="@+id/et_proprietor"
                android:ems="10"
                android:hint="@string/proprietor" />



            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/address" />

            <EditText
                android:id="@+id/et_address"
                android:ems="10"
                android:hint="@string/address" />

           <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/lessor" />

            <EditText
                android:id="@+id/et_lessor"
                android:ems="10"
                android:hint="@string/lessor" />
            
            
           <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/business_scope" />

            <EditText
                android:id="@+id/et_business_scope"
                android:ems="10"
                android:hint="@string/business_scope" />
            


            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="@string/note" />

            <EditText
                android:id="@+id/et_note"
                android:ems="10"
                android:hint="@string/note" />
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:text="@string/commit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:layout_gravity="right"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>