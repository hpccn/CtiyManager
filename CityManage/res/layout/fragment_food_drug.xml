<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity$DummySectionFragment" >

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/examination_time" />

            <EditText
                android:id="@+id/examination_date_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:hint="@string/hint_time" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/enterprise_name" />

            <EditText
                android:id="@+id/et_enterprise_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enterprise_name" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/legal_person" />

            <EditText
                android:id="@+id/et_legal_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/legal_person" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/address" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/address" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/examination_content" />

            <CheckBox
                android:id="@+id/cb_business_licence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/business_licence" />

            <CheckBox
                android:id="@+id/cb_hygiene_licence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/hygiene_licence" />
        </LinearLayout>

        <include
            android:id="@+id/layout_picture"
            layout="@layout/detail_general_picture" />

        <include
            android:id="@+id/layout_note"
            layout="@layout/layout_note" />
    </LinearLayout>

</ScrollView>