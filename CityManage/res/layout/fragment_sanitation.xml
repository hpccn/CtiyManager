<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/id_title"
             style="@style/mainTitle"
            android:text="@string/sanitation_examination"
            />

        <TextView
            android:id="@+id/id_sub_title"
             style="@style/subTitle"
            android:text="@string/sanitation_examination_sub_title"
            />
<LinearLayout style="@style/horizontalCenter" >
        <TextView
            style="@style/thirdTitle"
            
            android:text="@string/trash_category" />

        <EditText
            android:id="@+id/et_trash_category"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalCenter" >
        
        <TextView
            style="@style/thirdTitle"
            
            android:text="@string/examination_time" />

        <EditText
            android:id="@+id/examination_date_time"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalCenter" >
        
        <TextView
            style="@style/thirdTitle"
            
            android:text="@string/address" />

        <EditText
            android:id="@+id/et_address"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalCenter" >
        
        <TextView
            style="@style/thirdTitle"
            
            android:text="@string/trash_weight" />

        <EditText
            android:id="@+id/et_trash_weight"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalCenter" >

        <Button
            android:id="@+id/commit"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/commit" />

        <Button
            android:id="@+id/cancel"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/cancel" />
    </LinearLayout>


        </LinearLayout>

</LinearLayout>