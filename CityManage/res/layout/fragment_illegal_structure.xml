<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    tools:context=".MainActivity$DummySectionFragment" >
<!--     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" -->

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/landlord" />

            <EditText
                android:id="@+id/et_landlord"
                style="@style/generalEditText"
                android:ems="10"
                android:hint="@string/illegal_structure_landlord" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/landstatus" />

            <EditText
                android:id="@+id/et_land_property"
                style="@style/generalEditText"
                android:ems="10"
                android:hint="@string/landstatus" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/landarea" />

            <EditText
                android:id="@+id/et_landarea"
                style="@style/generalEditText"
                android:ems="10"
                android:hint="@string/landarea" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/construction" />

            <EditText
                android:id="@+id/et_construction"
                style="@style/generalEditText"
                android:hint="@string/construction" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/jianzhumianji" />

            <EditText
                android:id="@+id/et_jianzhumianji"
                style="@style/generalEditText"
                android:ems="10"
                android:hint="@string/jianzhumianji" />
        </LinearLayout>

        <LinearLayout style="@style/horizontalCenter" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/buildtime" />

            <EditText
                android:id="@+id/et_buildtime"
                style="@style/generalEditText"
                android:ems="10"
                android:hint="@string/buildtime" />
        </LinearLayout>



        <LinearLayout style="@style/horizontalLeft" >

            <TextView
                style="@style/thirdTitle"
                android:text="@string/circumstance_category" />

            <RadioGroup
                android:id="@+id/radiogroup_circumstance_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <RadioButton
                    style="@style/generalCheckButtonStyle"
                    android:id="@+id/rb_circumstance_category_newfound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    
                    android:text="@string/circumstance_category_newfound" />

                <RadioButton
                    style="@style/generalCheckButtonStyle"
                    android:id="@+id/rb_circumstance_category_dismantlement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/circumstance_category_dismantlement" />

                <RadioButton
                    style="@style/generalCheckButtonStyle"
                    android:id="@+id/rb_circumstance_category_outher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/circumstance_category_outher" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
