<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/id_summary_item_cover"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:contentDescription="缩略图"
        android:src="@drawable/ic_default_event" />
    <!-- android:background="@drawable/img_photo_background" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_summary_item_village_title"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="所属村 : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_summary_item_village"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="南王村 " />

            <TextView
                android:id="@+id/id_summary_item_cell_title"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_horizontal"
                android:text="所属格 : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_summary_item_cell"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="村东1格" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_summary_item_hidden_danger_title"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="隐患描述 : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_summary_item_hidden_danger"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 地点 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
             <TextView
                android:id="@+id/id_address_title"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="地点 : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_address"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:maxLines="1" />
        </LinearLayout>
        
        <!-- 更新时间 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_update_time_title"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="最后更新 : "
                android:textStyle="bold" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/id_update_time"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:singleLine="true" />

            <TextView
                android:id="@+id/id_status"
                style="@style/TextViewStyleCheckinListItemLineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:gravity="right"
                android:textColor="@color/light_blue"
                android:singleLine="true" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>