<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity$DummySectionFragment" >

    <LinearLayout style="@style/horizontalCenter" >

        <TextView
            style="@style/thirdTitle"
            android:text="@string/leaderid" />

        <EditText
            android:id="@+id/et_leaderid"
            style="@style/generalEditText"
            android:hint="@string/leaderid" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalCenter" >

        <TextView
            style="@style/thirdTitle"
            android:text="@string/leadername" />

        <EditText
            android:id="@+id/et_leadername"
            style="@style/generalEditText"
            android:hint="@string/leadername" />
    </LinearLayout>

</LinearLayout>