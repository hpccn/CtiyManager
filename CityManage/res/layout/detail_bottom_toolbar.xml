<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" >
<!-- android:background="@color/bottom_toolbar_background" -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_default_holo_dark"
            android:text="@string/commit" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_default_holo_light"
            android:text="@string/cancel" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@color/titlebar_text" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="@color/bottom_background" />

</LinearLayout>