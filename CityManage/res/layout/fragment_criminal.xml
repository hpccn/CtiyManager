<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/id_title"
        style="@style/mainTitle"
        android:text="@string/criminal_examination" />

    <TextView
        android:id="@+id/id_sub_title"
        style="@style/subTitle"
        android:text="@string/criminal_examination_sub_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    style="@style/thirdTitle"
                    android:text="@string/criminal_category" />

                <CheckBox
                    android:id="@+id/cb_infringement_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="@string/infringement_personal" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_property_violation"
                    android:layout_column="1"
                    android:text="@string/property_violation" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_economic_crime"
                    android:layout_column="1"
                    android:text="@string/economic_crime" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_public_security"
                    android:layout_column="1"
                    android:text="@string/public_security" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_duty_crime"
                    android:layout_column="1"
                    android:text="@string/duty_crime" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_endanger_society"
                    android:layout_column="1"
                    android:text="@string/endanger_society" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/legal_person" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_legal_person"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/address" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_address"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/tijiao" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discovery_date_time"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/submission_time" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/submission_date_time"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/additional_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/village" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/village"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/district_code" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/district_code"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/district_administrator" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/district_administrator"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/danger_code" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/danger_code"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/danger_level" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/danger_level"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/status" />

                <RadioGroup
                    android:id="@+id/radiogroup_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_status_unsolved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/status_unsolved" />

                    <RadioButton
                        android:id="@+id/rb_status_solving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_solving" />

                    <RadioButton
                        android:id="@+id/rb_status_solved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_solved" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/solution_process" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/solution_process"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout style="@style/horizontalCenter" >

                <!--
        <TextView
            android:layout_column="0"
            android:layout_gravity="right"
            android:text="Email address:" />

        <EditText android:ems="10" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="right"
            android:text="Password:" />

        <EditText android:ems="8" />

        <TextView android:layout_column="0" />
        
		<Button
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:text="Manual setup" />
        android:layout_row="5" 
        <TextView android:layout_column="1" />
                -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:text="@string/completion_time" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/completion_date_time"
                    android:ems="10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:text="@string/commit" />

</LinearLayout>